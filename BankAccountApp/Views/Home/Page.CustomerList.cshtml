<div class="app-main" ng-controller="CustomerListController">
    <h1>{{ title }}</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Company Name</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="customer in customers">
                <td>{{ customer.FirstName }}</td>
                <td>{{ customer.LastName }}</td>
                <td>{{ customer.CompanyName }}</td>
                <td>{{ customer.Address.AddressBlock() }}</td>
            </tr>
        </tbody>
    </table>
</div>

